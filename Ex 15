/******************************************************************************

15. Três amigos, Carlos, André e Felipe. decidiram rachar igualmente a conta de um bar. Faça um
algoritmo para ler o valor total da conta e imprimir quanto cada um deve pagar, mas faça com que
Carlos e André não paguem centavos. Ex: uma conta de R$101,53 resulta em R$33,00 para
Carlos, R$33,00 para André e R$35,53 para Felipe. 

*******************************************************************************/
#include <stdio.h>
#include <math.h>

int floatcmp(float a, float b){
    return fabs(a - b) < 0.009f;
}

float calcularCarlosEAndre (float totalConta) {
    
    float carlosEAndre = totalConta / 3;
    int parteCarlosEAndre = carlosEAndre;
  
    
    return parteCarlosEAndre;
}



float calcularFelipe (float totalConta) {
    
    float felipe = totalConta / 3;
    int total1 = felipe;
    int total2 = total1 * 2;
    float parteFelipe = totalConta - total2;
   
    return parteFelipe;
}

int main() {
    
    printf("%i\n", calcularCarlosEAndre(101.53) == 33 );
    printf("%d\n", floatcmp(calcularFelipe(101.53), 35.53));
    printf("\n");
    printf("%i\n", calcularCarlosEAndre(251.34) == 83 );
    printf("%d\n", floatcmp(calcularFelipe(251.34), 85.34));
    printf("\n");
    printf("%i\n", calcularCarlosEAndre(1057.31) == 352 );
    printf("%d\n", floatcmp(calcularFelipe(1057.31), 353.31));
    
    return 0;
}
