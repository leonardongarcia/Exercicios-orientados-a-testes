/******************************************************************************

12. Faça um algoritmo para ler o salário de um funcionário e aumentá-Io em 15%. Após o aumento,
desconte 8% de impostos. Imprima o salário inicial, o salário com o aumento e o salário final.

*******************************************************************************/
#include <stdio.h>
#include <math.h>

int floatcmp(float a, float b){
    return fabs(a - b) < 0.009f;
}


float calcularSalarioFinal(float salario) {
    
    float salarioFinal = (salario * 1.15f) * 0.92f;
    
    return salarioFinal;
}

int main() {
    
    printf("%d\n", floatcmp(calcularSalarioFinal(1000.00f), 1058.00f));
    printf("%d\n", floatcmp(calcularSalarioFinal(1058.19f), 1119.56f));
    printf("%d\n", floatcmp(calcularSalarioFinal(5197.65f), 5499.11f));
    printf("%d\n", floatcmp(calcularSalarioFinal(951.37f), 1006.55f));

    return 0;
}
