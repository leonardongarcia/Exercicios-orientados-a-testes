/******************************************************************************

13. Ler um número inteiro (assuma até três dígitos) e imprimir a saída da seguinte forma:
CENTENA = x
DEZENA = x
UNIDADE = x

*******************************************************************************/
#include <stdio.h>

int calcularCen (int num) {
    
    int cen = (num / 100) * 100;
    return cen;
}

int calcularDez (int num) {
    
    int dez = (num / 100) * 10;
    return dez;
}

int calcularUnid (int num) {
    
    int unid = (num / 100);
    return unid;
}

int main(){
    
    printf("%i\n", calcularCen(851) == 800);
    printf("%i\n", calcularDez(851) == 80);
    printf("%i\n", calcularUnid(851) == 8);
    printf("\n");
    printf("%i\n", calcularCen(795) == 700);
    printf("%i\n", calcularDez(795) == 70);
    printf("%i\n", calcularUnid(795) == 7);
    printf("\n");
    printf("%i\n", calcularCen(329) == 300);
    printf("%i\n", calcularDez(329) == 30);
    printf("%i\n", calcularUnid(329) == 3);
    
    return 0;
}


