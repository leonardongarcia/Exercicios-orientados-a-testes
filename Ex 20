/******************************************************************************

20. Uma confecção produz X blusas de lã e para isto gasta uma certa quantidade de novelos. Faça
um algoritmo para calcular quantos novelos de lã ela gasta por blusa.

*******************************************************************************/
#include <stdio.h>
#include <math.h>

int floatcmp(float a, float b){
    return fabs(a - b) < 0.009f;
}

float calcularLaPorBlusa(int totalDeBlusas, float totalDeLa) {
    
    float laPorBlusa = totalDeBlusas / totalDeLa;
    return laPorBlusa;
}

int main(){
    
    printf("%d\n", floatcmp(calcularLaPorBlusa(100, 150), 0.66f));
    printf("%d\n", floatcmp(calcularLaPorBlusa(1000, 1200), 0.83f));
    printf("%d\n", floatcmp(calcularLaPorBlusa(529, 427), 1.23f));
    printf("%d\n", floatcmp(calcularLaPorBlusa(87, 92), 0.94f));

    return 0;
}
