/******************************************************************************

10. Construa um algoritmo para calcular a distância entre dois pontos do plano cartesiano. Cada
ponto é um par ordenado (x,y). 

*******************************************************************************/
#include <stdio.h>
#include <math.h>

int floatcmp(float a, float b){
    return fabs(a - b) < 0.009f;
}

double calcularDistanciaPontos(double x1, double y1, double x2, double y2) {
    
    double distanciaAB = sqrt(pow((x2 - x1),2) + pow((y2 - y1),2));
    
    return distanciaAB;
    
}

int main() {
    
    printf("%d\n", floatcmp(calcularDistanciaPontos(1.0f, 1.0f, 2.0f, 1.0f), 1.0f));
    printf("%d\n", floatcmp(calcularDistanciaPontos(3.0f, 2.0f, 3.0f, 4.0f), 2.0f));
    printf("%d\n", floatcmp(calcularDistanciaPontos(1.0f, 1.0f, 1.0f, 4.0f), 3.0f));
    printf("%d\n", floatcmp(calcularDistanciaPontos(5.0f, 4.0f, 5.0f, 8.0f), 4.0f));
    printf("%d\n", floatcmp(calcularDistanciaPontos(5.0f, 2.0f, 10.0f, 2.0f), 5.0f));
    
    return 0;
}


/******************************************************************************

11. Uma fábrica controla o tempo de trabalho sem acidentes pela quantidade de dias. Faça um
algoritmo para converter este tempo em anos, meses e dias. Assuma que cada mês possui sempre
30 dias. 

*******************************************************************************/
#include <stdio.h>
#include <math.h>

int floatcmp(float a, float b){
    return fabs(a - b) < 0.009f;
}


float converterEmAnos(int dias) {
    
    float anos = dias / 360; 
}

float converterEmMeses(int dias) {
    
    float meses = dias / 30;
}


int main()
{
    printf("%d\n", converterEmAnos(360) == 1.0f);
    printf("%d\n", converterEmAnos(720) == 2.0f);
    printf("%d\n", converterEmAnos(1440) == 4.0f);
    printf("%d\n", converterEmAnos(1820) == 5.0f);
    printf("\n");
    printf("%d\n", converterEmMeses(360) == 12.0f);
    printf("%d\n", converterEmMeses(720) == 24.0f);
    printf("%d\n", converterEmMeses(910) == 30.0f);
    printf("%d\n", converterEmMeses(1820) == 60.0f);
    

    return 0;
}

/******************************************************************************

12. Faça um algoritmo para ler o salário de um funcionário e aumentá-Io em 15%. Após o aumento,
desconte 8% de impostos. Imprima o salário inicial, o salário com o aumento e o salário final.

*******************************************************************************/
#include <stdio.h>
#include <math.h>

int floatcmp(float a, float b){
    return fabs(a - b) < 0.009f;
}


float calcularSalarioFinal(float salario) {
    
    float salarioFinal = (salario * 1.15f) * 0.92f;
    
    return salarioFinal;
}

int main() {
    
    printf("%d\n", floatcmp(calcularSalarioFinal(1000.00f), 1058.00f));
    printf("%d\n", floatcmp(calcularSalarioFinal(1058.19f), 1119.56f));
    printf("%d\n", floatcmp(calcularSalarioFinal(5197.65f), 5499.11f));
    printf("%d\n", floatcmp(calcularSalarioFinal(951.37f), 1006.55f));

    return 0;
}
